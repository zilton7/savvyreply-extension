{
    "manifest_version": 3,
    "name": "SavyReply Extension",
    "version": "0.1.0",
    "description": "Generates replies for x.com posts using SavvyReply.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "*://*.x.com/*",
        "https://savvyreply.com/*",
        "http://localhost:3000/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://x.com/*/status/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png"
        },
        "default_title": "SavvyReply Extension",
        "default_popup": "popup/popup.html",
        "matches": [
            "*://*.x.com/*/status/*"
        ]
    }
}