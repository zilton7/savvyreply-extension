{
    "manifest_version": 3,
    "name": "SavyReply Generator",
    "version": "0.1.0",
    "description": "Generates replies for x.com posts using SavvyReply.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "*://*.x.com/*",
        "https://generativelanguage.googleapis.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://x.com/*/status/*"],
            "js": ["content.js"],
            "css": ["styles.css"]
        }
    ],
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png"
        },
        "default_title": "X Reply Generator - Set API Key (Not Implemented)",
        "matches": ["*://*.x.com/*/status/*"]
    }
}
